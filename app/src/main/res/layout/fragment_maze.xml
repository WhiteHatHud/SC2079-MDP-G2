<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MazeView for displaying the maze -->
    <com.application.controller.maze.MazeView
        android:id="@+id/maze_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_add_robot_position" />

    <!-- Save State Section -->
    <LinearLayout
        android:id="@+id/save_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/desert_tan"
        app:layout_constraintTop_toBottomOf="@id/maze_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reset_controls_layout"
        android:layout_margin="0dp">

        <EditText
            android:id="@+id/et_state_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="State name"
            android:layout_weight="1"
            android:padding="0dp" />

        <Button
            android:id="@+id/btn_save_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save State"
            android:padding="0dp" />

        <Spinner
            android:id="@+id/spinner_load_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/state_list"
            android:padding="0dp" />

        <Button
            android:id="@+id/btn_load_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load State"
            android:padding="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reset_controls_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/save_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_add_robot_position"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/button_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:layout_margin="8dp" />
    </LinearLayout>


    <!-- TextView for Add Robot Position -->
    <TextView
        android:id="@+id/tv_add_robot_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="Add Robot Position"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/reset_controls_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Robot Input Box -->
    <LinearLayout
        android:id="@+id/robot_input_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@color/desert_tan"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_robot_position"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- X Entry -->
        <Spinner
            android:id="@+id/spinner_robot_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/number_options"
            android:layout_weight="1" />

        <!-- Y Entry -->
        <Spinner
            android:id="@+id/spinner_robot_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/number_options"
            android:layout_weight="1" />

        <!-- D Option -->
        <Spinner
            android:id="@+id/spinner_robot_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/direction_options"
            android:layout_weight="1" />

        <!-- Set Button -->
        <Button
            android:id="@+id/btn_set_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- TextView for Add Obstacle -->
    <TextView
        android:id="@+id/tv_add_obstacles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="Add Obstacles"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/robot_input_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Obstacle Input Box -->
    <LinearLayout
        android:id="@+id/obstacle_input_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@color/desert_tan"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_add_obstacles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- X Entry -->
        <Spinner
            android:id="@+id/spinner_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/number_options"
            android:layout_weight="0.5" />

        <!-- Y Entry -->
        <Spinner
            android:id="@+id/spinner_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/number_options"
            android:layout_weight="0.5" />

        <!-- D Option -->
        <Spinner
            android:id="@+id/spinner_obstacle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/obstacle_types"
            android:layout_weight="0.5" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btn_add_obstacle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Buttons for movement -->
    <!-- Buttons for movement -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/obstacle_input_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_move_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up" />

        <Button
            android:id="@+id/button_move_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down" />

        <Button
            android:id="@+id/button_move_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left" />

        <Button
            android:id="@+id/button_move_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
